{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-md-12">

                <h1>Войдите или <a href="{{ path('fos_user_registration_register') }}" class="btn btn-custom-2" style="text-decoration: underline">Зарегистрируйтесь</a></h1>
                <div class="md-margin"></div><!-- space -->


            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form id="login-form" method="post" action="{{ path("fos_user_security_check") }}">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <div class="input-group">
                            <span class="input-group-addon"><span class="input-icon input-icon-email"></span><span class="input-text">Email&#42;</span></span>
                            <input type="text" name="_username" value="{{ last_username }}" required class="form-control input-lg" placeholder="Your Email">
                        </div><!-- End .input-group -->
                        <div class="input-group xs-margin">
                            <span class="input-group-addon"><span class="input-icon input-icon-password"></span><span class="input-text">Password&#42;</span></span>
                            <input type="password" name="_password" required class="form-control input-lg" placeholder="Your Password">
                        </div><!-- End .input-group -->
                        <span class="help-block text-right"><a href="#">Forgot your password?</a></span>
                        <button type="submit" class="btn btn-custom-2" name="_submit" >LOGIN</button>
                    </form>

                    <div class="sm-margin"></div><!-- space -->
                </div><!-- End .col-md-6 -->

            </div><!-- End.row -->

        </div><!-- End .col-md-12 -->
    </div><!-- End .row -->
</div><!-- End .container -->
